 ==================== */

switch, checkbox, radio {
  position: relative;
}

switch::after {
  font-family: "iconfont" !important;
  content: "\e645";
  position: absolute;
  color: #fff;
  top: 50%;
  margin-top: -8px;
  left: 10px;
  font-size: 16px;
  line-height: 16px;
  pointer-events: none;
  transform: scale(0, 0);
  transition: all 0.3s ease-in-out 0s;
}

switch[checked]::after {
  transform: scale(1, 1);
}

switch::before {
  font-family: "iconfont" !important;
